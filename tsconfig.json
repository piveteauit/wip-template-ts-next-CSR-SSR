{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "*.ts",
    "**.ts",
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "next.config.js",  
    "./node_modules",
    "./dist"
  ]
}
