{
  "name": "next-express-typescript",
  "version": "1.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=dev nodemon",
    "start": "NODE_ENV=production pm2 dist/_core/index.js --name app",
    "lint": "next lint",
    "clear:build": "rm -rf dist",
    "build": "npm run build:client && npm run build:api",
    "build:api": "tsc --project ./_core/tsconfig.json",
    "build:client": "next build .",
    "drybuild": "npm run prebuild:client && npm run drybuild:api && npm run clear:build",
    "drybuild:api": "tsc --project ./_core/tsconfig.json --noEmit && npm run clear:build",
    "drybuild:client": "next build . && npm run clear:build",
    "prettier": "npm run prettier:api && npm run prettier:client",
    "prettier:api": "prettier --write ./_core/* && prettier --write ./api/*",
    "prettier:client": "prettier --write ./src/*",
    "precommit": "npm run prettier && npm run drybuild",
    "precommit:api": "npm run prettier:api && npm run drybuild:api",
    "precommit:client": "npm run prettier:client && npm run drybuild:client",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "eslint-config-prettier": "^8.8.0",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "next": "^13.4.7",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.2",
    "@types/react": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "autoprefixer": "^10.4.14",
    "daisyui": "^3.1.7",
    "eslint": "^8.43.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "13.4.7",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.0.x"
  }
}
